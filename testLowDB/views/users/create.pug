extends ../layouts/common.pug

block content
	.container
		h1 Add new user
		if(errors)
			each error in errors
				.alert.alert-danger=error
		.form-group
			form(action="/users/create", method="POST", enctype="multipart/form-data")
				.row
					.col-md-6
						label Name
						input.form-control(type="text" name="name", value=values?values.name:"")
					.col-md-6
						label Phone
						input.form-control(type="number" name="phone", value=values?values.phone:"")
				label Avatar
				input.form-control-file(type="file" name="avatar")
				button(class="btn btn-primary ml-2 mt-2") Add 