extends ../layouts/common.pug

block content
	.container
		h1 Transfer
		if(errors)
			each error in errors
				.alert.alert-danger=error
		.form-group
			form(action="/transfer/create", method="POST")
				input(type="hidden" name="_csrf" value=csrfToken)
					
				.row
					.col-md-6
						label Account
						input.form-control(type="text" name="accountId")
					.col-md-6
						label Amount
						input.form-control(type="number" name="amount")
				button(class="btn btn-primary ml-2 mt-2") Transfer 